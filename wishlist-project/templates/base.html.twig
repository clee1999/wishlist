<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('default') }}">Wishlist Project</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                {% if not app.user %}
                <a class="nav-item nav-link active" href="{{ path('app_login') }}"> Se connecter <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <a class="nav-item nav-link active" href="{{ path('wishlist_index') }}"> Voir ma wishlist <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="{{ path('wishlist_create') }}">Cr√©er ma wishlist</a>
                    <a class="nav-item nav-link" href="{{ path('item_add') }}">Ajouter item</a>
                    <a class="nav-item nav-link" href="{{ path('user') }}">All users</a>
                {% endif %}
            </div>
        </div>
    </nav>
    <div class="container">
        {% block body %}
        {% endblock %}
    </div>
    </body>
</html>
